{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [{
            "include": "templates/**/*.hbs",
            "watchAssets": true,
            "outDir": "dist/src"
        }]
    }
}